<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/general_margin">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivSearchBook"
        android:layout_width="@dimen/width_book_overview"
        android:layout_height="@dimen/width_book"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/img_rounded_small"
        app:srcCompat="@drawable/placeholder_android_book" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSearchBookName"
        android:layout_width="@dimen/size_book"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivSearchBook"
        android:layout_toEndOf="@id/ivSearchBook"
        android:textColor="?attr/colorOnSurface"
        android:layout_marginStart="@dimen/general_margin"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvSearchBookAuthor"
        android:layout_width="@dimen/size_book"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivSearchBook"
        android:layout_below="@id/tvSearchBookName"
        android:layout_marginStart="@dimen/general_margin"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

</RelativeLayout>