<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/general_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBookSectionDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_book_section_detail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tvBookSectionDetailName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder_android_book"
        tools:layout_editor_absoluteX="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBookSectionDetailName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintBottom_toTopOf="@+id/tvBookSectionDetailAuthor"
        app:layout_constraintTop_toBottomOf="@+id/ivBookSectionDetail"
        tools:layout_editor_absoluteX="8dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBookSectionDetailAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/general_margin"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        app:layout_constraintBottom_toTopOf="@+id/ivBookSectionDetail"
        app:layout_constraintTop_toBottomOf="@+id/tvBookSectionDetailName"
        tools:layout_editor_absoluteX="8dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBookSectionDetailMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_2x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_more_horiz_24" />
</androidx.constraintlayout.widget.ConstraintLayout>