<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/general_margin">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivBookLinear"
        android:layout_width="@dimen/width_book_overview"
        android:layout_height="@dimen/width_book"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/img_rounded_small"
        app:srcCompat="@drawable/placeholder_android_book" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBookMoreLinear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/general_margin"
        app:tint="?attr/colorOnSurface"
        app:srcCompat="@drawable/ic_baseline_more_horiz_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBookNameLinear"
        android:layout_width="@dimen/size_book"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivBookLinear"
        android:layout_toEndOf="@id/ivBookLinear"
        android:textColor="?attr/colorOnSurface"
        android:layout_toStartOf="@id/ivBookMoreLinear"
        android:layout_marginStart="@dimen/general_margin"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvBookAuthorLinear"
        android:layout_width="@dimen/size_book"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ivBookLinear"
        android:layout_below="@id/tvBookNameLinear"
        android:layout_marginStart="@dimen/general_margin"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption" />

</RelativeLayout>